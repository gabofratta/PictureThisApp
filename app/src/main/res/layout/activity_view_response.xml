<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.janrodriguez.picturethis.Activities.ViewChallengeActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Game room"
    android:id="@+id/challenge_title"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="false"
    android:layout_centerHorizontal="true" />

<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/table1"
    android:orientation="horizontal"
    android:stretchColumns="2"
    android:showDividers="beginning|middle|end"
    android:layout_below="@+id/challenge_title"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="15dp"
    android:gravity="center_horizontal">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="My Challenge"
            android:id="@+id/textView2"
            android:singleLine="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Response"
            android:id="@+id/textView3"
            android:layout_column="23"
            android:singleLine="true"
            android:layout_gravity="center_horizontal" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/tablerow1"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/challenge_picture"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_pic" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/response_picture"
            android:layout_column="23"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_pic" />
    </TableRow>

</TableLayout>

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/table2"
    android:stretchColumns="2"
    android:touchscreenBlocksFocus="true"
    android:layout_marginTop="15dp"
    android:layout_below="@+id/table1"
    android:layout_alignParentLeft="true">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Challenger"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Susan"
            android:id="@+id/challenger_name"
            android:layout_column="1" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/tablerow2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10:12am on April 20, 2015"
            android:id="@+id/challenge_date"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/tablerow3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location"
            android:id="@+id/textView6"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Map"
            android:id="@+id/view_map_button"
            android:layout_column="1"
            android:textSize="12dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/tablerow4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Multiplayer Challenge"
            android:id="@+id/textView7"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiplayer_checkbox"
            android:layout_column="1"
            android:checked="true"
            android:enabled="true" />
    </TableRow>
</TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/table2"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:id="@+id/accept_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:id="@+id/decline_button"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
