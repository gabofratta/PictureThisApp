<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.janrodriguez.picturethis" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".PictureThisApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC1Hr2VmBjN2jrGz_SKlsYh8kID_FOxnto" />

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Activities.ReceivedChallengeActivity"
            android:label="@string/title_activity_received"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.SentChallengeActivity"
            android:label="@string/title_activity_sent"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login" >

        </activity>
        <activity
            android:name=".Activities.CreateChallengeActivity"
            android:label="@string/title_activity_create_challenge"
            android:parentActivityName=".Activities.MainActivity" >
        </activity>
        <activity
            android:name=".Activities.MapActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName=".Activities.MainActivity" >
        </activity>
        <activity
            android:name=".Activities.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".Activities.MainActivity" >
        </activity>
        <activity
            android:name=".Activities.ViewChallengeActivity"
            android:label="@string/title_activity_view_challenge"
            android:parentActivityName=".Activities.CreateChallengeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.janrodriguez.picturethis.Activities.CreateChallengeActivity" />
        </activity>
        <activity
            android:name=".Activities.ChallengeFeedActivity"
            android:label="@string/title_activity_challenge_feed" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--android:theme="@style/AppThemeNoActionBar">-->
    </application>

</manifest>
